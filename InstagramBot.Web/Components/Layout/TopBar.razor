@inject IJSRuntime JSRuntime
@inject INotificationService NotificationService

<header class="topbar">
    <div class="topbar-left">
        <button class="mobile-menu-toggle d-md-none" @onclick="ToggleSidebar">
            <i class="fas fa-bars"></i>
        </button>

        <div class="breadcrumb">
            <span class="breadcrumb-item">@currentPageTitle</span>
        </div>
    </div>

    <div class="topbar-right">
        <div class="search-box">
            <input type="text" placeholder="جستجو..." @bind="searchQuery" @onkeypress="HandleSearch" />
            <i class="fas fa-search"></i>
        </div>

        <div class="notifications-dropdown dropdown">
            <button class="notification-btn" data-bs-toggle="dropdown">
                <i class="fas fa-bell"></i>
                @if (unreadNotificationsCount > 0)
                {
                    <span class="notification-badge">@unreadNotificationsCount</span>
                }
            </button>

            <div class="dropdown-menu dropdown-menu-end notifications-menu">
                <div class="notifications-header">
                    <h6>اعلان‌ها</h6>
                    <button class="mark-all-read" @onclick="MarkAllAsRead">
                        همه را خوانده‌شده علامت بزن
                    </button>
                </div>

                <div class="notifications-list">
                    @if (notifications.Any())
                    {
                        @foreach (var notification in notifications.Take(5))
                        {
                            <div class="notification-item @(notification.IsRead ? "" : "unread")"
                                 @onclick="() => MarkAsRead(notification.Id)">
                                <div class="notification-icon">
                                    <i class="@GetNotificationIcon(notification.Type)"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">@notification.Title</div>
                                    <div class="notification-message">@notification.Message</div>
                                    <div class="notification-time">@notification.CreatedDate.ToString("yyyy/MM/dd HH:mm")</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-notifications">
                            <i class="fas fa-bell-slash"></i>
                            <span>اعلان جدیدی وجود ندارد</span>
                        </div>
                    }
                </div>

                <div class="notifications-footer">
                    <a href="/notifications" class="view-all">مشاهده همه اعلان‌ها</a>
                </div>
            </div>
        </div>

        <div class="user-dropdown dropdown">
            <button class="user-btn" data-bs-toggle="dropdown">
                <img src="@currentUser?.ProfileImage" alt="@currentUser?.FullName" class="user-avatar" />
                <span class="user-name d-none d-md-inline">@currentUser?.FullName</span>
                <i class="fas fa-chevron-down"></i>
            </button>

            <div class="dropdown-menu dropdown-menu-end user-menu">
                <a class="dropdown-item" href="/settings/profile">
                    <i class="fas fa-user"></i>
                    پروفایل
                </a>
                <a class="dropdown-item" href="/settings/security">
                    <i class="fas fa-cog"></i>
                    تنظیمات
                </a>
                <div class="dropdown-divider"></div>
                <button class="dropdown-item" @onclick="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                    خروج
                </button>
            </div>
        </div>
    </div>
</header>

@code {
    [CascadingParameter] public User currentUser { get; set; }
    [Parameter] public string currentPageTitle { get; set; } = "داشبورد";

    private string searchQuery = "";
    private int unreadNotificationsCount = 0;
    private List<NotificationDto> notifications = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadNotifications();

        // اتصال به SignalR برای دریافت اعلان‌های جدید
        await JSRuntime.InvokeVoidAsync("subscribeToNotifications",
            DotNetObjectReference.Create(this));
    }

    private async Task LoadNotifications()
    {
        if (currentUser != null)
        {
            notifications = await NotificationService.GetRecentNotificationsAsync(currentUser.Id, 10);
            unreadNotificationsCount = notifications.Count(n => !n.IsRead);
            StateHasChanged();
        }
    }

    [JSInvokable]
    public async Task OnNewNotification(NotificationDto notification)
    {
        notifications.Insert(0, notification);
        if (!notification.IsRead)
        {
            unreadNotificationsCount++;
        }
        StateHasChanged();

        // نمایش toast notification
        await JSRuntime.InvokeVoidAsync("showToastNotification",
            notification.Title, notification.Message, notification.Type);
    }

    private async Task MarkAsRead(int notificationId)
    {
        await NotificationService.MarkAsReadAsync(notificationId);
        var notification = notifications.FirstOrDefault(n => n.Id == notificationId);
        if (notification != null && !notification.IsRead)
        {
            notification.IsRead = true;
            unreadNotificationsCount--;
            StateHasChanged();
        }
    }

    private async Task MarkAllAsRead()
    {
        await NotificationService.MarkAllAsReadAsync(currentUser.Id);
        foreach (var notification in notifications.Where(n => !n.IsRead))
        {
            notification.IsRead = true;
        }
        unreadNotificationsCount = 0;
        StateHasChanged();
    }

    private async Task HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(searchQuery))
        {
            // پیاده‌سازی جستجو
            await JSRuntime.InvokeVoidAsync("performSearch", searchQuery);
        }
    }

    private async Task ToggleSidebar()
    {
        await JSRuntime.InvokeVoidAsync("toggleSidebar");
    }

    private string GetNotificationIcon(string type)
    {
        return type switch
        {
            "Success" => "fas fa-check-circle text-success",
            "Warning" => "fas fa-exclamation-triangle text-warning",
            "Error" => "fas fa-times-circle text-danger",
            "Info" => "fas fa-info-circle text-info",
            _ => "fas fa-bell"
        };
    }

    private async Task Logout()
    {
        await JSRuntime.InvokeVoidAsync("logout");
    }
}

